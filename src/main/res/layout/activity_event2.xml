<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:gravity="center"
    android:padding="7dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_event2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#ddfef8f8">

        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView android:gravity="center"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#4e71a7"
                android:textSize="20dp"
                android:textColor="#fff7f7"
                android:text="아래에 행사정보를 입력하세요"
                android:layout_weight="1"
                android:layout_span="2"
                android:layout_marginBottom="10dp"/>

        </TableRow>

        <TableRow android:padding="3dp">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:text="제목:"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <EditText android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/e1"
                android:background="#ffffff"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow android:padding="3dp">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:text="종류:"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <RadioGroup android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <RadioButton android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/r1"
                    android:checked="true"/>

                <ImageView android:layout_height="68dp"
                    android:layout_width="50dp"
                    android:src="@drawable/volunteer"/>

                <RadioButton android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/r2"/>

                <ImageView android:layout_height="68dp"
                    android:layout_width="50dp"
                    android:src="@drawable/sing"/>

                <RadioButton android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/r3"/>

                <ImageView android:layout_height="68dp"
                    android:layout_width="50dp"
                    android:src="@drawable/edu"/>

            </RadioGroup>

        </TableRow>

        <TableRow android:padding="3dp">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:text="Tel:"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <EditText android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/e2"
                android:background="#ffffff"
                android:layout_weight="1"
                android:hint="- 빼고 입력"/>

        </TableRow>

        <TableRow android:padding="3dp">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:text="설명:"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <EditText android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/e3"
                android:background="#ffffff"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow android:padding="3dp">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:text="Homepage:"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <EditText android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/e6"
                android:background="#ffffff"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/b2"
            android:text="취소"
            android:layout_weight="1"
            android:onClick="onClick"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/b3"
            android:text="추가"
            android:layout_weight="1"
            android:onClick="onclick"/>

    </LinearLayout>

</LinearLayout>